<!-- homepage/add new blog -->

<section class="section is-paddingless-horizontal">
  <div class="container grid-xl">
    <div class="columns is-mobile">
      <div class="column is-full-width">
        <div class="notification">
          {{post.date}}
          <form id="new-post-form">
            <div class="field center">
              <div class="control">
                <input type="text" placeholder="Title" id="blog-title">
              </div>
            </div>

            <textarea class="textarea is-large" rows="6" class='form-control' name="post-body" id="blog-content"
              placeholder="Start blog..."></textarea>
          <br>
            <div class="buttons center">
              <div class="text-right">
                <button class="btn btn-primary" type="submit">Submit</button>
              </div>
            </div>
          </form>
          <br>

          <!-- posted blogs  -->

          <div class="control">
            {{#each stories}}
            <field class="textarea has-fixed-size" rows="1">
              {{title}} by {{user.username}} on {{format_date date_created}}
            </field>

            <textarea class="textarea" rows="3" id="blogcontent">
              {{content}}
            </textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="js/homepage.js"></script> <a href="{{post.url}}" class="lead">{{post.title}}</a>